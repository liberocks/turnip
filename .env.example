# Turnip WebRTC Signaling Server Configuration

# Required: JWT signing secret (use a strong, random secret in production)
ACCESS_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server configuration
PORT=5004
PUBLIC_IP=0.0.0.0
LOG_LEVEL=info
ENVIRONMENT=development

# Redis configuration for multi-instance support
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Instance identification (auto-generated from hostname if not set)
INSTANCE_ID=

# Application metadata
VERSION=1.0.0
BRANCH=main
BUILT_AT=

# Threading (auto-calculated based on CPU cores if not set)
THREAD_NUM=

# Prometheus Metrics configuration
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_AUTH=none
# METRICS_AUTH=basic
# METRICS_USERNAME=admin
# METRICS_PASSWORD=secret
METRICS_BIND_IP=0.0.0.0

# Realm configuration
REALM=development
